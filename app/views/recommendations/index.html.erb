<h1>I Recommend...</h1>

<%= link_to "Add a New Item", "/recommendations/new" %>

<ul>
  <% @recommendations.each do |r| %>
    <li>
      <%= link_to "#{r.title}: #{r.description}", details_url(r.id) %>
      <%= link_to "Toast", details_path(r.id), method: 'delete' %>
      <%= link_to "Edit", "/recommendations/#{r.id}/edit" %>
    </li>
  <% end %>
</ul>
