<h1>Edit</h1>

<%= form_tag(recommendation_url(@item.id), method: 'patch') do %>

  <label for="title">Title:</label>
  <input id="title" type="text" name="title" value="<%= @item.title %>">
  <br>
  <label for="desc">Description:</label>
  <input type="text" id="desc" name="desc" value="<%= @item.description %>">
  <br>
  <input type="checkbox" id="free" name="free">
  <label for="free">Free?</label>
  <br>
  <input type="submit">

<% end %>


